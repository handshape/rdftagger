<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>


<VBox fx:id="rootContainer" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.gc.csps.rdftagger.ui.RdfTaggingUIController">
    <children>
        <JFXToolbar>
            <center>
                <HBox spacing="5.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <children>
                        <JFXButton onAction="#loadSubjectsAction" text="Load Subjects..." />
                        <JFXButton onAction="#loadPredicatesAction" text="Load Predicates..." />
                        <JFXButton onAction="#loadObjectsAction" text="Load Objects..." />
                    </children>
                </HBox>
            </center>
            <right>
                <JFXButton onAction="#saveAction" text="Save..." BorderPane.alignment="CENTER" />
            </right>
        </JFXToolbar>
        <SplitPane dividerPositions="0.46238244514106586" prefHeight="160.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <items>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Subject" />
                        <ComboBox fx:id="subjectComboBox" onAction="#subjectComboBoxAction" prefWidth="1000.0" />
                        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                            <VBox fx:id="objectButtonContainer" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS" />
                        </ScrollPane>
                        <HBox VBox.vgrow="NEVER">
                            <children>
                                <JFXButton fx:id="previousButton" buttonType="RAISED" onAction="#previousAction" prefHeight="50.0" prefWidth="400.0" ripplerFill="#d3d3d3" text="Previous" HBox.hgrow="ALWAYS" />
                                <JFXButton fx:id="nextButton" buttonType="RAISED" onAction="#nextAction" prefHeight="50.0" prefWidth="400.0" ripplerFill="LIGHTGRAY" text="Next" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </VBox>
                <ScrollPane fx:id="splitPane" fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0">
                    <content>
                        <WebView fx:id="webView" prefHeight="-1.0" prefWidth="-1.0" />
                    </content>
                </ScrollPane>
            </items>
        </SplitPane>
    </children>
</VBox>
